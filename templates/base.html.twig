<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Фотобанк!{% endblock %}</title>
        {% block stylesheets %}
            <style>
                .userblock {
                    width:200px;
                    border:1px solid #555;
                    border-radius:20px;
                    padding:20px;
                    text-align:center;
                }
            </style>
        {% endblock %}
    </head>
    <body>
        {% block userblock %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="userblock">
                <p>Пользователь: {{ app.user.username }}</p>
                <a href="{{ path('logout') }}">Выход</a>
            </div>
            {% endif %}
        {% endblock %}
        
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
